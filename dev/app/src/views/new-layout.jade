doctype html
html(lang='en', xmlns='http://www.w3.org/1999/xhtml')
    include includes/new-head
    //New-layout
    if !noNav
        body(id="ng-app", ng-app="ideafunnelApp")
    else
        body(id="ng-app", ng-app="ideafunnelApp", style="background-color: #FFF2E1; overflow: hidden;")

    if !noNav
        .navbar.navbar-inverse.navbar-grey.navbar-fixed-top(role='navigation')
                .navbar-header
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#')
                        img(src="/images/ideafunnel_logo_small.png", style="height: 16px; margin-top: -3px;")

                .collapse.navbar-collapse
                    ul.nav.navbar-nav.top-links-dark
                        li
                            a(href='/login') Sign In
                        li
                            a(href='/signup') Sign Up

    // Begin page content
    block content

    if !noNav
        #footer

                p.text-muted &copy; Idea Funnel 2014



    include includes/angular
    if controller
        script(src="/javascripts/app/controllers/#{controller}.min.js")
